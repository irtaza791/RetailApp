<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAA7F7"
    android:backgroundTint="@color/purple_200"
    tools:context=".HomeAct"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CAA7F7"
        android:backgroundTint="#CAA7F7"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            app:srcCompat="@drawable/app_design" />



            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="#CAA7F7"
                android:backgroundTint="#CAA7F7"
                android:fontFamily="@font/bungee"
                android:freezesText="true"
                android:text="Retail Friend"
                android:textAlignment="center"
                android:textSize="34sp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

               >


                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your Email"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_margin="20dp"/>
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your password"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_margin="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   >

                    <androidx.appcompat.widget.AppCompatButton
                        android:visibility="gone"
                        android:id="@+id/LoginBtn"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/btnshape"
                        android:backgroundTint="#835C26C1"
                        android:fontFamily="@font/bungee"
                        android:text="Log in"
                        android:textColor="#EEEEF0"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/Signupbtn"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/btnshape"
                        android:backgroundTint="#835C26C1"
                        android:fontFamily="@font/bungee"
                        android:text="Sign Up"
                        android:textColor="#EEEEF0" />

                </LinearLayout>
                <TextView
                    android:id="@+id/signGuideText"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Already have an Account? Click here to login. "
                    android:textAlignment="center"

                    />
                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:id="@+id/registerGuideText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="New? Click here to register"
                    android:textAlignment="center"

                    />

            </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>