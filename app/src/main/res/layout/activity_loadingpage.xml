<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAA7F7"
    android:backgroundTint="@color/purple_200"
    tools:context=".HomeAct"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CAA7F7"
        android:backgroundTint="#CAA7F7"
        android:orientation="vertical">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="end">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:fontFamily="@font/bungee"
        android:textColor="#835900FF"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signoutbtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/logout"
        android:backgroundTint="#835900FF"
        android:fontFamily="@font/bungee"

        android:textColor="#EEEEF0" />
</LinearLayout>


        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            app:srcCompat="@drawable/app_design" />




        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="#CAA7F7"
            android:backgroundTint="#CAA7F7"
            android:fontFamily="@font/bungee"
            android:freezesText="true"
            android:text="Retail Friend"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />





        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please scane a new product or manage your products in your inventory"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                />

            <LinearLayout
                android:id="@+id/hiddenBtns"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <androidx.appcompat.widget.AppCompatButton

                    android:id="@+id/homeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnshape"
                    android:backgroundTint="#835C26C1"
                    android:fontFamily="@font/bungee"
                    android:text="Scanner"
                    android:textColor="#EEEEF0" />

                <androidx.appcompat.widget.AppCompatButton

                    android:id="@+id/productsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"

                    android:background="@drawable/btnshape"
                    android:backgroundTint="#835C26C1"
                    android:fontFamily="@font/bungee"
                    android:text="Products"
                    android:textColor="#EEEEF0" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>